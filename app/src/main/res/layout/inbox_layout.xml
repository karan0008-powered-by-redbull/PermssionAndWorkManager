<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/white"
    android:id="@+id/clView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvCircularView"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:elevation="10dp"
        android:shape="ring"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/ubuntu_regular"
            android:textSize="@dimen/textsize_twentyeight"
            android:id="@+id/tvNameInitials"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/sixty_dp" />

        <ImageView
            android:id="@+id/ivCheck"
            android:visibility="gone"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:src="@drawable/ic_baseline_check_24"
            android:background="@drawable/circular_drawable"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginStart="@dimen/ten_dp"
        android:textSize="@dimen/textsize_twenty"
        app:layout_constraintStart_toEndOf="@+id/cvCircularView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/textsize_twenty"
        app:layout_constraintStart_toEndOf="@+id/cvCircularView"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvMessage"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:textSize="@dimen/textsize_fifteen"
        app:layout_constraintStart_toEndOf="@+id/cvCircularView"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/five_dp"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fbBlue"
        android:textSize="@dimen/textsize_twelve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/seventy_dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBottomBarGrey"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />


</androidx.constraintlayout.widget.ConstraintLayout>